<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorClass">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="99dp"
        android:layout_height="25dp"
        android:text="Doctor Class"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.236" />

    <TextView
        android:id="@+id/textView3Doc"
        android:layout_width="286dp"
        android:layout_height="37dp"
        android:fontFamily="@font/bold"
        android:text="Welcome to DocTalk"
        android:textColor="#4E88A3"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109" />

    <Button
        android:id="@+id/logoutDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:onClick="logout"
        android:text="LOG OUT"
        android:textColor="#436B8C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.79" />

    <Button
        android:id="@+id/ocr_btnDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/damion"
        android:text="OCR"
        app:layout_constraintBottom_toTopOf="@+id/logoutDoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3Doc"
        app:layout_constraintVertical_bias="0.351" />

    <Button
        android:id="@+id/symptoms_BtnDoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Respond To Patients"
        app:layout_constraintBottom_toTopOf="@+id/profile_btnDoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ocr_btnDoc"
        app:layout_constraintVertical_bias="0.37" />

    <Button
        android:id="@+id/profile_btnDoc"
        android:layout_width="124dp"
        android:layout_height="42dp"
        android:layout_marginBottom="48dp"
        android:text="Your Profile"
        app:layout_constraintBottom_toTopOf="@+id/logoutDoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ocr_btnDoc"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>